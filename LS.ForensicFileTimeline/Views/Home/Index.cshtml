@using Kendo.Mvc.UI.Fluent
@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "Timeline Sample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="example">
    <div class="demo-section k-content wide">
        @(Html.Kendo().Timeline<LS.ForensicFileTimeline.Models.TimelineModel>()
            .Name("Timeline")
            .DataDateField("Date")
            .DataDescriptionField("Description")
            .DataTitleField("Title")
            .DataActionsField("Actions")
            .Orientation(TimelineOrientation.Vertical)
            .AlternatingMode()
            .CollapsibleEvents()
            .DataSource(dt => dt.Read("GetFiles", "Home"))
        )
    </div>
</div>


